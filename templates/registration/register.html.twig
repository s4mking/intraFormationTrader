{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}
{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_errors(registrationForm) }}

<div class="container_login py-10">
        <div class="wrapper titlelogin">
            <h3 class="text-center text-white py-3 rounded-top">Création compte</h3>
            <div class="inner-warpper text-center loginbackground" style="background-image:url('{{asset('images/imageville.jpeg')}}')">
                {{ form_start(registrationForm, {'attr': {'id': 'formvalidate', 'class': 'rounded'},}) }}
                <div class="input-group">
                    {{ form_widget(registrationForm.email, {'attr': {'id': 'username'}}) }}
                    <span class="lighting"></span>
                </div>
                <div class="input-group">
                   <label for="registration_form__token" class="sr-only palceholder">Mot de passe</label>
                    {{ form_widget(registrationForm.plainPassword, {
                        id: 'inputPassword',
                        class: 'form-control mt-2'
                    }) }}
                    <span class="lighting"></span>
                </div>
                <button type="submit" id="login">Inscription</button>
            {{ form_end(registrationForm) }}
        </div>

        <div class="signup-wrapper text-center">
            <p> <a href="{{ path('app_login') }}"> Déjà un compte ? <span class="text-primary">Se connecter</span></a></p>
        </div>
        </div>

            </div>
    </div>
{% endblock %}
