{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}
{% block title %}Réinitialisation{% endblock %}

{% block body %}

    <div class="container_login py-10" style="background-image:url('{{asset('images/imageville.jpeg')}}')">
        <div class="wrapper titlelogin rounded-top">
            <h3 class="text-center text-white py-3 rounded-top">Réinitialisation</h3>
            <div class="inner-warpper text-center loginbackground" >
                {{ form_start(resetForm, {'attr': {'id': 'formvalidate', 'class': 'rounded'},}) }}
                <div class="input-group">
                    {{ form_widget(resetForm.plainPassword, {'attr': {'id': 'inputPassword'}}) }}
                    <span class="lighting"></span>
                </div>
                <button type="submit" id="login">Réinitialiser votre mot de passe</button>
                {{ form_end(resetForm) }}
            </div>

            <div class="signup-wrapper text-center">
                <p> <a href="{{ path('app_login') }}"> Déjà un compte ? <span class="text-primary">Se connecter</span></a></p>
            </div>
        </div>

    </div>
{% endblock %}
