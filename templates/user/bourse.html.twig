        .card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease-in-out;
            margin-bottom: 20px;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .card .card-body {
            padding: 20px;
        }
        .tradingview-widget-container {
            width: 100%;
            height: 400px;
        }
        .tradingview-widget-container__widget {
            width: 100%;
            height: 100%;
        }
        .tradingview-widget-copyright {
            display: none;
        }
        .icon-container {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 10px;
        }
        .icon-container i {
            font-size: 24px;
            color: #6c757d;
        }
        .icon-container .icon-bg {
            background-color: #e9ecef;
            border-radius: 50%;
            padding: 10px;
            display: inline-flex;
        }
    </style>
{% endblock %}

